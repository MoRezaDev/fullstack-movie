model Movie {
    id String @id @default(uuid())

    title String
    description String
    year Int
    duration String
    rating String @default("N/A")
    rating_search Float @default(0)
    stars String[]
    director String @default("N/A")
    images_url String[]
    genre String[]
    has_subtitle Boolean @default(false)
    has_dub Boolean @default(false)
    imdb_id String @unique 
    poster String?
    language String[]
    type String @default("movie")

    postId String? @unique
    post Post? @relation(fields: [postId], references: [id])

    

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([genre],type : Hash)
    @@index([title],type : Hash)
    @@index([imdb_id],type : Hash)


}